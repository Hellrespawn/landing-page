{
  "name": "landing-page",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "run-p server tailwind-watch tsc-watch",
    "build": "run-p tailwind-build tsc-build",
    "server": "lite-server",
    "tailwind-watch": "tailwindcss -i ./src/style.css -o ./html/style.css --watch",
    "tsc-watch": "tsc --watch",
    "tailwind-build": "tailwindcss -i ./src/style.css -o ./html/style.css --minify",
    "tsc-build": "tsc"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "lite-server": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.5.5"
  }
}
